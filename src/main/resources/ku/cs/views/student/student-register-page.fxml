            <Button layoutX="160.0" layoutY="500.0" mnemonicParsing="false" onAction="#onRegisterButton" prefHeight="50.0" prefWidth="200.0" styleClass="DefaultButton" text="ลงทะเบียนเข้าใช้งาน" textFill="WHITE" />
