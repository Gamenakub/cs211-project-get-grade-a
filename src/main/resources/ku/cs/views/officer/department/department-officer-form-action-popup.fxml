<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="200.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.requestforms.OfficerDepartmentRequestFormActionPopupController">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="920.0" spacing="20.0">
         <children>
            <Label maxHeight="880.0" mnemonicParsing="true" prefHeight="77.0" prefWidth="900.0" styleClass="header" text="ดำเนินการใบคำร้อง">
               <font>
                  <Font name="TH SarabunPSK" size="48.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="62.0" prefWidth="720.0" spacing="12.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onPreviousPageButton" prefHeight="50.0" prefWidth="288.0" styleClass="back-button" text="ย้อนกลับ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRequestSubmitEndAtDepartmentLeaderButton" prefHeight="50.0" prefWidth="288.0" styleClass="green-button" text="คำร้องสิ้นสุดที่หัวหน้าภาควิชา" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRequestSubmitSetEndToDeanButton" prefHeight="50.0" prefWidth="288.0" styleClass="green-button" text="ส่งต่อให้คณบดี" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRejectRequestButton" prefHeight="50.0" prefWidth="288.0" styleClass="deny-button" text="ปฏิเสธคำร้อง" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../styles/main-style.css" />
      <URL value="@../../styles/main-style.css" />
   </stylesheets>
</AnchorPane>
