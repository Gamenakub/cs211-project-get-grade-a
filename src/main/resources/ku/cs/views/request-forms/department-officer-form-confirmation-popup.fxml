<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="650.0" prefWidth="800.0" stylesheets="@../styles/main-style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.requestforms.OfficerDepartmentRequestFormConfirmationPopupController">
   <children>
      <VBox alignment="CENTER" prefHeight="558.0" prefWidth="800.0" spacing="20.0">
         <children>
            <Label maxHeight="880.0" mnemonicParsing="true" prefWidth="720.0" styleClass="header" text="แนบไฟล์เอกสาร">
               <font>
                  <Font name="TH SarabunPSK" size="48.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="300.0" prefWidth="100.0">
               <children>
                  <Pane onDragDropped="#dropOnUploadButton" onDragOver="#dragOverUploadButton" onMouseClicked="#onUploadButton" prefHeight="180.0" prefWidth="320.0" styleClass="upload-area">
                     <children>
                        <ImageView fitHeight="79.0" fitWidth="109.0" layoutX="116.0" layoutY="28.0" onDragDropped="#dropOnUploadButton" onDragOver="#dragOverUploadButton" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../../images/upload-icon.png" />
                           </image>
                        </ImageView>
                        <Label layoutX="96.0" layoutY="116.0" styleClass="normal-text" text="อัปโหลดไฟล์รูปภาพ" />
                     </children>
                  </Pane>
                  <VBox maxWidth="-Infinity" spacing="4.0">
                     <children>
                        <Label prefWidth="273.0" styleClass="text-field-label" text="เลือกบุคคล">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <font>
                              <Font name="TH SarabunPSK" size="18.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="selectTargetDepartmentApprover" prefHeight="39.0" prefWidth="576.0" styleClass="menu-button" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="62.0" prefWidth="720.0" spacing="8.0">
               <children>
                  <Pane prefHeight="84.0" prefWidth="278.0" />
                  <Button mnemonicParsing="false" onAction="#onButtonBack" prefHeight="50.0" prefWidth="272.0" styleClass="back-button" text="ย้อนกลับ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRequestSubmitEndAtDepartmentLeader" prefHeight="50.0" prefWidth="352.0" styleClass="green-button" text="คำร้องสิ้นสุดที่หัวหน้าภาควิชา" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRequestSubmitSetEndToDean" prefHeight="50.0" prefWidth="352.0" styleClass="green-button" text="ส่งต่อให้คณะบดี" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRequestRefuse" prefHeight="50.0" prefWidth="352.0" styleClass="deny-button" text="ปฏิเสธคำร้อง" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
