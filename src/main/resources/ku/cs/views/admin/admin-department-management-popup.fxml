            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="420.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onCancelButton" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #DA3131;" styleClass="Button" stylesheets="@../styles/main-style.css" text="ยกเลิก" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#onConfirmButton" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #006B67;" styleClass="Button" stylesheets="@../styles/main-style.css" text="ยืนยัน" textFill="WHITE" />
