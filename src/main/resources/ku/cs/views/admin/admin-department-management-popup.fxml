                  </VBox>
                  <VBox prefHeight="38.0" prefWidth="280.0">
                     <children>
                        <Label styleClass="TextFieldLabel" stylesheets="@../styles/main-style.css" text="รหัสภาควิชา">
                           <font>
                              <Font name="TH SarabunPSK Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="userNameTextField221" prefHeight="28.0" prefWidth="280.0" promptText="กรอกรหัสภาควิชา" styleClass="BigTextField" stylesheets="@../styles/main-style.css" />
